# ========================================
# APEX ARBITRAGE SYSTEM - CONFIGURATION
# ========================================

# ========================================
# EXECUTION MODE CONFIGURATION
# ========================================
# MODE options: LIVE, DEV, SIM
# LIVE: Executes real arbitrage transactions on-chain (PRODUCTION)
# DEV: Runs all logic with real data but simulates transactions (dry-run, no on-chain execution)
# SIM: Simulation mode for backtesting and strategy testing with real market data
MODE=DEV

# Network RPC URLs (Use premium RPCs for best performance)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BSC_RPC_URL=https://bsc-dataseed.binance.org

# WebSocket URLs for mempool monitoring
POLYGON_WSS_URL=wss://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ETHEREUM_WSS_URL=wss://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Private Key (WITHOUT 0x prefix)
PRIVATE_KEY=your_private_key_here

# Execution Parameters
MIN_PROFIT_USD=5
MAX_GAS_PRICE_GWEI=100
SLIPPAGE_BPS=50
SCAN_INTERVAL=60000

# Safety Limits
MAX_DAILY_LOSS=50
MAX_CONSECUTIVE_FAILURES=5
MIN_TIME_BETWEEN_TRADES=30000

# ML Model Configuration
ML_CONFIDENCE_THRESHOLD=0.8
ENABLE_ML_FILTERING=true
XGBOOST_MODEL_PATH=data/models/xgboost_model.json
ONNX_MODEL_PATH=data/models/onnx_model.onnx

# Hybrid AI Engine Configuration
LIVE_TRADING=false
AI_MODEL_PATH=./data/models/lstm_omni.onnx
AI_THRESHOLD=0.78
AI_ENGINE_PORT=8001
RUST_ENGINE_URL=http://localhost:7000

# Redis Configuration (for AI engine caching)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Prometheus Metrics
PROMETHEUS_PORT=9090

# Multi-Chain Configuration
ENABLE_CROSS_CHAIN=true
ENABLE_LAYER_ZERO_BRIDGE=true
ENABLE_ACROSS_BRIDGE=true

# Monitoring & Alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
ENABLE_TELEGRAM_ALERTS=false

# MEV Protection
USE_PRIVATE_RELAY=true
FLASHBOTS_RELAY_URL=https://relay.flashbots.net
EDEN_RELAY_URL=https://api.edennetwork.io/v1/rpc

# Advanced Features
ENABLE_MEMPOOL_MONITORING=true
ENABLE_MICRO_RAPTOR_BOTS=true
RAPTOR_BOT_COUNT=4
RUST_ENGINE_ENABLED=true

# Database
DB_PATH=data/apex.db

# Logging
LOG_LEVEL=info
LOG_DIR=logs
